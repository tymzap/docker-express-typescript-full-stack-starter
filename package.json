{
  "name": "docker-express-typescript-full-stack-starter",
  "version": "1.0.0",
  "description": "Dockerized, frontend-agnostic full stack Express boilerplate with Typescript",
  "scripts": {
    "start": "node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc --project src/server/tsconfig.server.json && webpack --config src/client/webpack.config.js",
    "watch": "concurrently \"tsc --project src/server/tsconfig.server.json --watch\" \"webpack --config src/client/webpack.config.js --watch\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tymzap/docker-express-typescript-full-stack-starter.git"
  },
